TARGET = loader_ndbapi_csv
SRCS = $(TARGET).cpp
OBJS = $(TARGET).o
CXX = g++
CFLAGS = -c -Wall -O2 -fno-rtti -fno-exceptions
CXXFLAGS = 
DEBUG = 
MYSQL_BASEDIR = /usr/
INCLUDE_DIR = $(MYSQL_BASEDIR)/include/ 
LIB_DIR = -L$(MYSQL_BASEDIR)/lib 
LFLAGS = -Wall  -Wl,-rpath -Wl,$(MYSQL_BASEDIR)/lib
SYS_LIB = -lpthread -lm 

$(TARGET): $(OBJS)
	$(CXX) $(CXXFLAGS) $(LFLAGS) $(LIB_DIR)  $(OBJS) $(SYS_LIB) -lmysqlclient_r  -lndbclient -o $(TARGET)

$(TARGET).o: $(SRCS)
	$(CXX) $(CFLAGS) -I$(MYSQL_BASEDIR)/include -I$(MYSQL_BASEDIR)/include/mysql  -I$(MYSQL_BASEDIR)/include/mysql/storage/ndb/ndbapi -I$(MYSQL_BASEDIR)/include/mysql/storage/ndb/ -I$(INCLUDE_DIR)  $(SRCS)

clean:
	rm -f *.o $(TARGET)

